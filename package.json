{
  "name": "@m4ttheweric/use-loading-state",
  "private": false,
  "version": "0.4.0",
  "license": "MIT",
  "type": "module",
  "main": "./dist/main.cjs",
  "module": "./dist/main.mjs",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.mjs"
      },
      "require": {
        "types": "./dist/main.d.ts",
        "default": "./dist/main.cjs"
      }
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/m4ttheweric/use-loading-state.git"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b ./tsconfig.lib.json && vite build",
    "build:app": "tsc -b ./tsconfig.app.json && vite build --config vite.app.config.ts",
    "test": "vitest run",
    "lint": "eslint . --quiet",
    "format:write": "prettier --write \"**/*.{ts,tsx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx}\" --cache",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "release": "node --no-warnings publish.mjs",
    "create-snippets": "tsx scripts/create-code-snippets.ts",
    "pre-release": "bun run build && bun run type-check && bun run lint && bun run format:write"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@babel/parser": "^7.26.7",
    "@babel/traverse": "^7.26.7",
    "@eslint/js": "^9.19.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@inquirer/prompts": "^7.3.1",
    "@mantine/code-highlight": "^7.16.2",
    "@mantine/core": "^7.16.2",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.1",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "chalk": "^5.4.1",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "happy-dom": "^16.8.1",
    "postcss": "^8.5.1",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.4.2",
    "react-icons": "^5.4.0",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.23.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.5"
  }
}
